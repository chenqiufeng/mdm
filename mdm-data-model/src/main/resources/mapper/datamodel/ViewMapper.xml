<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="olm.mdm.datamodel.mapper.ViewMapper">

    <resultMap type="View" id="ViewResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="code"    column="code"    />
        <result property="description"    column="description"    />
        <result property="tableName"    column="table_name"    />
        <result property="version"    column="version"    />
        <result property="dataModelId"    column="data_model_id"    />
        <result property="enabled"    column="enabled"    />
        <result property="sortIndex"    column="sort_index"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectViewVo">
        select id, name, code, description, table_name, version, data_model_id, enabled, sort_index, create_by, create_time, update_by, update_time from view
    </sql>

    <select id="selectViewList" parameterType="View" resultMap="ViewResult">
        <include refid="selectViewVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="tableName != null  and tableName != ''"> and table_name like concat('%', #{tableName}, '%')</if>
            <if test="version != null "> and version = #{version}</if>
            <if test="dataModelId != null "> and data_model_id = #{dataModelId}</if>
            <if test="enabled != null "> and enabled = #{enabled}</if>
            <if test="sortIndex != null "> and sort_index = #{sortIndex}</if>
        </where>
    </select>

    <select id="selectViewById" parameterType="Long" resultMap="ViewResult">
        <include refid="selectViewVo"/>
        where id = #{id}
    </select>

    <insert id="insertView" parameterType="View" useGeneratedKeys="true" keyProperty="id">
        insert into view
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="code != null">code,</if>
            <if test="description != null">description,</if>
            <if test="tableName != null">table_name,</if>
            <if test="version != null">version,</if>
            <if test="dataModelId != null">data_model_id,</if>
            <if test="enabled != null">enabled,</if>
            <if test="sortIndex != null">sort_index,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="code != null">#{code},</if>
            <if test="description != null">#{description},</if>
            <if test="tableName != null">#{tableName},</if>
            <if test="version != null">#{version},</if>
            <if test="dataModelId != null">#{dataModelId},</if>
            <if test="enabled != null">#{enabled},</if>
            <if test="sortIndex != null">#{sortIndex},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateView" parameterType="View">
        update view
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="code != null">code = #{code},</if>
            <if test="description != null">description = #{description},</if>
            <if test="tableName != null">table_name = #{tableName},</if>
            <if test="version != null">version = #{version},</if>
            <if test="dataModelId != null">data_model_id = #{dataModelId},</if>
            <if test="enabled != null">enabled = #{enabled},</if>
            <if test="sortIndex != null">sort_index = #{sortIndex},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteViewById" parameterType="Long">
        delete from view where id = #{id}
    </delete>

    <delete id="deleteViewByIds" parameterType="String">
        delete from view where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>